        <!--<property name="artist" value="Custom Artist" />-->
        <!--<property name="tracks">-->
            <!--<list>-->
                <!--<value>Track1</value>-->
                <!--<value>Track2</value>-->
            <!--</list>-->
        <!--</property>-->
    <!--</bean>-->

    <!-- 使用p空间命名，通过属性的setter方法注入-->
    <bean id="cdPlayer5" class="springdemo.wiring.xml.basepackage.CDPlayer" p:cd-ref="sgtPeppers3" />


    <util:list id="trackList">
       <value>Track1</value>
        <value>Track2</value>
    </util:list>

